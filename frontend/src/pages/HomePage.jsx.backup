};

// Transformations Gallery with PROPER Swiper handling
const TransformationsGallery = () => {
  const theme = useTheme();
  const [transformations, setTransformations] = useState([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);
  const swiperRef = useRef(null);

  useEffect(() => {
    fetchTransformations();
  }, []);

  const fetchTransformations = async () => {
    try {
      setLoading(true);
      const response = await galleryAPI.getApprovedGallery({ 
        limit: 12,
        sort: '-createdAt'
      });
      
      console.log('Transformations response:', response.data);
      
      if (response.data?.data && response.data.data.length > 0) {
        // Ensure we have at least 3 items for loop to work properly
        let items = response.data.data;
        if (items.length < 3) {
          // Duplicate items to meet minimum requirement for loop
          items = [...items, ...items, ...items].slice(0, 6);
        }
        setTransformations(items);
      } else {
        // Generate sample data if API returns empty
        const sampleData = Array.from({ length: 6 }, (_, i) => ({
          _id: `sample-${i}`,
          beforeImage: { 
            url: `/api/placeholder/400/300?text=Before+${i+1}&bg=dc2626&color=fff`,
            caption: `Original issue ${i+1}`
          },
          afterImage: { 
            url: `/api/placeholder/400/300?text=After+${i+1}&bg=16a34a&color=fff`,
            caption: `Resolved issue ${i+1}`
          },
          report: { 
            title: `Success Story ${i+1}`,
            category: ['Pothole', 'Drainage', 'Street Light', 'Garbage'][i % 4],
            location: { address: `Area ${i+1}` }
          },
          likeCount: Math.floor(Math.random() * 100),
          featured: i % 3 === 0,
        }));
        setTransformations(sampleData);
      }
    } catch (err) {
      console.error('Error fetching transformations:', err);
      setError('Failed to load transformations');
      // Generate fallback data
      const fallbackData = Array.from({ length: 6 }, (_, i) => ({
        _id: `fallback-${i}`,
        beforeImage: { 
          url: `https://via.placeholder.com/400x300/dc2626/ffffff?text=Before+${i+1}`,
          caption: `Before transformation ${i+1}`
        },
        afterImage: { 
          url: `https://via.placeholder.com/400x300/16a34a/ffffff?text=After+${i+1}`,
          caption: `After transformation ${i+1}`
        },
        report: { 
          title: `Transformation ${i+1}`,
          category: 'Improvement',
          location: { address: 'City Location' }
        },
        likeCount: 50 + i * 10,
        featured: i % 2 === 0,
      }));
      setTransformations(fallbackData);
    } finally {
      setLoading(false);
    }
  };

  if (loading) {
    return (
      <Box sx={{ py: 12, display: 'flex', justifyContent: 'center', alignItems: 'center' }}>
        <CircularProgress size={60} />
      </Box>
    );
  }

  return (
    <Box sx={{ 
      py: { xs: 8, md: 12 }, 
      background: `linear-gradient(135deg, ${alpha('#1976d2', 0.05)} 0%, ${alpha('#64b5f6', 0.05)} 100%)`,
      position: 'relative',
    }}>
      <Container maxWidth="xl">
        <Box sx={{ mb: 6, textAlign: 'center' }}>
          <Typography
            variant="h2"
            fontWeight={800}
            gutterBottom
            sx={{
              background: 'linear-gradient(135deg, #1976d2 0%, #64b5f6 100%)',
              WebkitBackgroundClip: 'text',
              WebkitTextFillColor: 'transparent',
            }}
          >
            Success Stories
          </Typography>
          <Typography variant="h5" color="text.secondary">
            Witness the transformation of urban infrastructure in our communities
          </Typography>
        </Box>

        {error && (
          <Alert severity="warning" sx={{ mb: 4 }}>
            {error} - Showing sample data
          </Alert>
        )}

        <Box sx={{ position: 'relative', px: { xs: 0, md: 8 } }}>
          <Swiper
            ref={swiperRef}
            modules={[Navigation, Pagination, Autoplay]}
            spaceBetween={30}
            slidesPerView={1}
            breakpoints={{
              640: { slidesPerView: 1 },
              768: { slidesPerView: 2 },
              1024: { slidesPerView: 3 },
            }}
            navigation={{
              nextEl: '.swiper-button-next-transform',
              prevEl: '.swiper-button-prev-transform',
            }}
            pagination={{ 
              clickable: true,
              dynamicBullets: true,
            }}
            autoplay={{ 
              delay: 5000, 
              disableOnInteraction: false 
            }}
            loop={transformations.length >= 3} // Only enable loop if we have enough slides
            style={{ paddingBottom: 50 }}
          >
            {transformations.map((item) => (
              <SwiperSlide key={item._id}>
                <motion.div
                  initial={{ opacity: 0, scale: 0.9 }}
                  whileInView={{ opacity: 1, scale: 1 }}
                  transition={{ duration: 0.5 }}
                  viewport={{ once: true }}
                >
                  <Card
                    sx={{
                      height: 450,
                      position: 'relative',
                      borderRadius: 3,
                      overflow: 'hidden',
                      boxShadow: '0 10px 30px rgba(0, 0, 0, 0.1)',
                      transition: 'all 0.3s ease',
                      '&:hover': {
                        transform: 'translateY(-8px)',
                        boxShadow: '0 20px 40px rgba(25, 118, 210, 0.2)',
                      },
                    }}
                  >
                    {/* Before/After Comparison */}
                    <Box sx={{ position: 'relative', height: '60%' }}>
                      <Box
                        sx={{
                          position: 'absolute',
                          top: 0,
                          left: 0,
                          width: '50%',
                          height: '100%',
                          overflow: 'hidden',
                        }}
                      >
                        <CardMedia
                          component="img"
                          image={item.beforeImage?.url}
                          alt="Before"
                          sx={{ 
                            height: '100%', 
                            width: '100%',
                            objectFit: 'cover',
                            transition: 'transform 0.3s ease',
                            '&:hover': {
                              transform: 'scale(1.05)',
                            },
                          }}
                        />
                        <Box
                          sx={{
                            position: 'absolute',
                            top: 12,
                            left: 12,
                            bgcolor: 'error.main',
                            color: 'white',
                            px: 2,
                            py: 1,
                            borderRadius: 2,
                            fontWeight: 'bold',
                            fontSize: '0.75rem',
                          }}
                        >
                          BEFORE
                        </Box>
                      </Box>
                      <Box
                        sx={{
                          position: 'absolute',
                          top: 0,
                          right: 0,
                          width: '50%',
                          height: '100%',
                          overflow: 'hidden',
                        }}
                      >
                        <CardMedia
                          component="img"
                          image={item.afterImage?.url}
                          alt="After"
                          sx={{ 
                            height: '100%', 
                            width: '100%',
                            objectFit: 'cover',
                            transition: 'transform 0.3s ease',
                            '&:hover': {
                              transform: 'scale(1.05)',
                            },
                          }}
                        />
                        <Box
                          sx={{
                            position: 'absolute',
                            top: 12,
                            right: 12,
                            bgcolor: 'success.main',
                            color: 'white',
                            px: 2,
                            py: 1,
                            borderRadius: 2,
                            fontWeight: 'bold',
                            fontSize: '0.75rem',
                          }}
                        >
                          AFTER
                        </Box>
                      </Box>
                    </Box>

                    <CardContent sx={{ height: '40%', display: 'flex', flexDirection: 'column' }}>
                      <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'flex-start', mb: 1 }}>
                        <Typography variant="h6" fontWeight={700} noWrap sx={{ maxWidth: '70%' }}>
                          {item.report?.title}
                        </Typography>
                        {item.featured && (
                          <Chip
                            label="Featured"
                            size="small"
                            color="warning"
                            icon={<Star fontSize="small" />}
                          />
                        )}
                      </Box>
                      
                      <Chip
                        label={item.report?.category}
                        size="small"
                        sx={{ mb: 2, alignSelf: 'flex-start' }}
                      />
                      
                      <Typography variant="body2" color="text.secondary" sx={{ flexGrow: 1, mb: 2 }}>
                        {item.afterImage?.caption || 'Successfully transformed'}
                      </Typography>
                      
                      <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center' }}>
                        <Typography variant="caption" color="text.secondary">
                          {item.report?.location?.address}
                        </Typography>
                        <Box sx={{ display: 'flex', alignItems: 'center', gap: 0.5 }}>
                          <ThumbUp fontSize="small" />
                          <Typography variant="caption">{item.likeCount}</Typography>
                        </Box>
                      </Box>
                    </CardContent>
                  </Card>
                </motion.div>
              </SwiperSlide>
            ))}
          </Swiper>

          {/* Custom Navigation Buttons */}
          <IconButton
            className="swiper-button-prev-transform"
            sx={{
              position: 'absolute',
              left: 0,
              top: '50%',
              transform: 'translateY(-50%)',
              zIndex: 10,
              bgcolor: 'background.paper',
              boxShadow: 3,
              display: { xs: 'none', md: 'flex' },
              '&:hover': { bgcolor: 'background.paper' },
            }}
          >
            <ChevronLeft />
          </IconButton>
          <IconButton
            className="swiper-button-next-transform"
            sx={{
              position: 'absolute',
              right: 0,
              top: '50%',
              transform: 'translateY(-50%)',
              zIndex: 10,
              bgcolor: 'background.paper',
              boxShadow: 3,
              display: { xs: 'none', md: 'flex' },
              '&:hover': { bgcolor: 'background.paper' },
            }}
          >
            <ChevronRight />
          </IconButton>
        </Box>

        <Box sx={{ textAlign: 'center', mt: 4 }}>
          <Button
            variant="outlined"
            href="/gallery"
            endIcon={<ArrowForward />}
            sx={{
              px: 4,
              py: 1.5,
              borderWidth: 2,
              borderRadius: 2,
            }}
          >
            View All Transformations
          </Button>
